<%- include('./partials/header.ejs') %> 

<div class="container"  >

    <h1 class="view_header">Transactions History</h1>
<div class="table_wrapper">
     
        <table class='customer_table'>
             <thead class='table_header'>
                <tr>
                    <th>Sender Name</th>
                    <th>Receiver Name</th>
                    <th>Total Credits</th>
                </tr>
            </thead>
            <tbody class='table_body'>
                <% for(let ele of transaction){ %>
                <tr class='table_row'>
                  
                    <td><%= ele.fromUser %></td>
                    <td><%= ele.toUser%></td>
                    <td><%= ele.credits%></td>
                      
                </tr> 
    
             <% } %>
                
        </tbody>
        </table>

        </div>
    </div>
          
    
<%- include('./partials/footer.ejs') %> 

