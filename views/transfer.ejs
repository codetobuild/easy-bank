<%- include('./partials/header.ejs') %> 

<div class="container">
    

    <form class="transferForm">
        <p class="transfer_message" style="font-size: 1.1rem; font-weight: bold; color: white; background-color:indigo; text-align: center;"></p>

        <div>
            <label for="fromUser">Sender</label>
            <select name="fromUser" id="fromUser" required>
                <option value="" selected disabled>select sender</option>
                <% for(user of users){ %> 
                    <option value="<%=user.id%>"><%=user.email%></option>
                    <%}%>
            </select>
        </div>
        <div>
            <label for="credit">Total fund</label>
            <input type="number" id="credit" class="credit" placeholder="0.0" required>
        </div>
        <div>
            <label for="toUser">Recepient</label>
            <select name="toUser" id="toUser" required>
                <option value="" selected disabled>select sender</option>
                <% for(user of users){ %> 
                    <option value="<%=user.id%>"><%=user.email%></option>
                    <%}%>
            </select>
        </div>
        <div>
            <input type="submit" value="Transfer" class="transfer_btn">
        </div>


    </form>

</div>

